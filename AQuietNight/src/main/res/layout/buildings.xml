<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/build_text"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/fireplace"
        android:layout_alignRight="@+id/fireplace"
        android:layout_alignEnd="@+id/fireplace"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Build:"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/fireplace"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="Fireplace"
        android:layout_below="@+id/build_text"
        android:layout_alignLeft="@+id/workshop"
        android:layout_alignStart="@+id/workshop"
        android:longClickable="true"/>

    <Button
        android:id="@+id/workshop"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/fireplace"
        android:layout_weight="1"
        android:text="Workshop"
        android:longClickable="true"/>

    <Button
        android:id="@+id/trade_post"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/workshop"
        android:layout_weight="1"
        android:text="Trade Post"
        android:longClickable="true"/>










    <TextView
        android:id="@+id/log"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/stone"
        android:layout_alignStart="@+id/stone"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/storage"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_toEndOf="@+id/log"
        android:layout_alignBottom="@+id/log"
        android:layout_toRightOf="@+id/log"
        android:textStyle="bold" />

</RelativeLayout>