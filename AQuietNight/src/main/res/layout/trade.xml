<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/trade_text"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/stone_for_wood"
        android:layout_alignRight="@+id/stone_for_wood"
        android:layout_alignEnd="@+id/stone_for_wood"
        android:layout_marginTop="20dp"
        android:text="Trade:"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/stone_for_wood"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="10 Stone"
        android:layout_below="@+id/trade_text"
        android:layout_alignLeft="@+id/leaves_for_wood"
        android:layout_alignStart="@+id/leaves_for_wood"
        android:longClickable="true"/>

    <Button
        android:id="@+id/leaves_for_wood"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/stone_for_wood"
        android:layout_weight="1"
        android:text="5 Leaves"
        android:longClickable="true"/>

    <Button
        android:id="@+id/wood_for_leaves"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/leaves_for_wood"
        android:layout_weight="1"
        android:text="5 Wood"
        android:longClickable="true"/>










    <TextView
        android:id="@+id/log"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:fontFamily="sans-serif-bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/trade_text"
        android:layout_alignStart="@+id/trade_text"
        />

    <TextView
        android:id="@+id/storage"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:fontFamily="sans-serif-bold"
        android:layout_toEndOf="@+id/log"
        android:layout_alignBottom="@+id/log"
        android:layout_toRightOf="@+id/log" />

</RelativeLayout>