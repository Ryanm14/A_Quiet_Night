<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/gather_text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-bold"
        android:layout_alignLeft="@+id/wood"
        android:layout_alignRight="@+id/wood"
        android:layout_alignEnd="@+id/wood"
        android:text="Gather:"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/wood"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:text="Wood" />

    <Button
    android:id="@+id/trap"
    style="@drawable/button_shape"
    android:layout_width="120dp"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_below="@id/wood"
    android:layout_weight="1"
    android:text="Traps" />

    <Button
        android:id="@+id/leaves"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/trap"
        android:layout_weight="1"
        android:text="Leaves" />










    <TextView
        android:id="@+id/log"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:fontFamily="sans-serif-bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/trap"
        android:layout_alignStart="@+id/trap" />

    <TextView
        android:id="@+id/storage"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:fontFamily="sans-serif-bold"
        android:layout_toEndOf="@+id/log"
        android:layout_alignBottom="@+id/log"
        android:layout_toRightOf="@+id/log" />

</RelativeLayout>