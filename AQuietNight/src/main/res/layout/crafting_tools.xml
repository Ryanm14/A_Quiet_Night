<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/stone_pick"
            style="@drawable/button_shape"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:onClick="buttonStonePick"
            android:text="Stone Pick" />

        <Button
            android:id="@+id/stone_axe"
            style="@drawable/button_shape"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/stone_pick"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:onClick="buttonStoneAxe"
            android:text="Stone Axe" />

        <Button
            android:id="@+id/tin_pick"
            style="@drawable/button_shape"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:onClick="buttonTinPick"
            android:text="Tin Pick" />

        <Button
            android:id="@+id/tin_axe"
            style="@drawable/button_shape"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:onClick="buttonTinAxe"
            android:text="Tin Axe" />

        <Button
            android:id="@+id/lead_axe"
            style="@drawable/button_shape"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:onClick="buttonLeadAxe"
            android:text="Lead Axe" />

        <Button
            android:id="@+id/lead_pick"
            style="@drawable/button_shape"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:onClick="buttonLeadPick"
            android:text="Lead Pick" />

    </LinearLayout>


    <TextView
        android:id="@+id/log"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:editable="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/storage"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_toEndOf="@+id/log"
        android:layout_toRightOf="@+id/log"
        android:background="@drawable/button_shape"
        android:editable="true"
        android:textStyle="bold" />


</RelativeLayout>
