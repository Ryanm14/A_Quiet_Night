<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

    <Button
        android:id="@+id/stone_pick"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="Stone Pick"
        android:onClick="buttonStonePick"
        android:background="@drawable/button_shape"/>

    <Button
        android:id="@+id/stone_axe"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/stone_pick"
        android:layout_weight="1"
        android:text="Stone Axe"
        android:onClick="buttonStoneAxe"
        android:background="@drawable/button_shape"/>
    <Button
        android:id="@+id/tin_pick"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Tin Pick"
        android:onClick="buttonTinPick"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape" />

    <Button
        android:id="@+id/tin_axe"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Tin Axe"
        android:onClick="buttonTinAxe"
        android:background="@drawable/button_shape"/>

    </LinearLayout>


    <TextView
        android:id="@+id/log"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:editable="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/storage"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:textStyle="bold"
        android:editable="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_shape"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/log"
        android:layout_toEndOf="@+id/log" />



</RelativeLayout>
