<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/stone_pick"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="Stone Pick"
        android:layout_alignLeft="@+id/stone_axe"
        android:layout_alignStart="@+id/stone_axe"
        android:onClick="buttonStonePick"
        android:background="@drawable/button_shape"/>

    <Button
        android:id="@+id/anvil"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Anvil"
        android:onClick="buttonAnvil"
        android:background="@drawable/button_shape"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/copper_axe"
        android:layout_alignLeft="@+id/copper_axe" />

    <Button
        android:id="@+id/stone_axe"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/stone_pick"
        android:layout_weight="1"
        android:text="Stone Axe"
        android:onClick="buttonStoneAxe"
        android:background="@drawable/button_shape"/>
    <Button
        android:id="@+id/copper_pick"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Copper Pick"
        android:onClick="buttonCopperPick"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/stone_axe"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/copper_axe" />

    <Button
        android:id="@+id/copper_axe"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/copper_pick"
        android:layout_weight="1"
        android:text="Copper Axe"
        android:onClick="buttonCopperAxe"
        android:background="@drawable/button_shape"/>


    <TextView
        android:id="@+id/log"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:editable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/anvil"
        android:layout_alignStart="@+id/anvil" />

    <TextView
        android:id="@+id/storage"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:textStyle="bold"
        android:editable="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_shape"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/log"
        android:layout_toEndOf="@+id/log" />

</RelativeLayout>