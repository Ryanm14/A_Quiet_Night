<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/boil_water"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Boil Water"
        android:layout_alignLeft="@+id/cook_food"
        android:layout_alignStart="@+id/cook_food"
        android:onClick="buttonBoilWater"
        android:background="@drawable/button_shape"/>

    <Button
        android:id="@+id/cook_food"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/boil_water"
        android:text="Cook Food"
        android:background="@drawable/button_shape"
        android:onClick="buttonCookFood"/>

    <Button
        android:id="@+id/leaf_canteen"
        style="@drawable/button_shape"
        android:layout_width="120dp"
        android:layout_height="57dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/cook_food"
        android:text="Leaf Canteen"
        android:background="@drawable/button_shape"
        android:onClick="buttonLeafCanteen"/>

    <TextView
        android:id="@+id/log"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:editable="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/storage"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:textStyle="bold"
        android:editable="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_shape"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/log"
        android:layout_toEndOf="@+id/log" />

</RelativeLayout>