<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/linearLayout">


    <Button
        android:id="@+id/leaf_canteen"
        style="@drawable/button_shape"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:text="Leaf Canteen"
        android:background="@drawable/button_shape"
        android:onClick="buttonLeafCanteen"/>

    </LinearLayout>
    <TextView
        android:id="@+id/log"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:textStyle="bold"
        android:editable="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/storage" />

    <TextView
        android:id="@+id/storage"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:textStyle="bold"
        android:editable="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_shape"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/log"
        android:layout_toEndOf="@+id/log" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <Button
            android:id="@+id/boil_water"
            style="@drawable/button_shape"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Boil Water"
            android:onClick="buttonBoilWater"
            android:background="@drawable/button_shape"/>

        <Button
            android:id="@+id/cook_food"
            style="@drawable/button_shape"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Cook Food"
            android:background="@drawable/button_shape"
            android:onClick="buttonCookFood"/>
        </LinearLayout>

</RelativeLayout>